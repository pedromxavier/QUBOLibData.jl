{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "QUBO Instance Metadata Schema",
    "type": "object",
    "required": [
        "code",
        "size",
        "format",
        "problem"
    ],
    "properties": {
        "code": {
            "type": "string",
            "minLength": 1
        },
        "size": {
            "type": "integer"
        },
        "format": {
            "type": "string",
            "enum": [
                "qubo",
                "qubist",
                "bpqjson",
                "minizinc",
                "hfs"
            ]
        },
        "problem": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "3R3X",
                        "5R5X"
                    ]
                },
                "sizes": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "source": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "minLength": 1
                    },
                    "author": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        },
                        "minLength": 1
                    },
                    "year": {
                        "type": "integer"
                    },
                    "citekey": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        }
    }
}